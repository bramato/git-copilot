{
  "name": "git-copilot",
  "version": "1.0.0",
  "description": "AI-powered Git analysis and code review CLI tool with specialized agents for PR analysis, documentation, and code quality",
  "main": "lib/index.js",
  "bin": {
    "git-copilot": "./bin/git-copilot.js",
    "analyze-branch": "./bin/git-copilot.js"
  },
  "scripts": {
    "start": "node bin/git-copilot.js",
    "dev": "node bin/git-copilot.js",
    "test": "jest",
    "build": "npm run compile",
    "compile": "tsc",
    "prepublishOnly": "npm run build && npm test",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix"
  },
  "keywords": [
    "git",
    "ai",
    "cli",
    "code-review",
    "documentation",
    "pr-analysis",
    "openai",
    "anthropic",
    "copilot"
  ],
  "author": "bramato",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bramato/git-copilot.git"
  },
  "homepage": "https://github.com/bramato/git-copilot#readme",
  "bugs": {
    "url": "https://github.com/bramato/git-copilot/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "lib/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "figlet": "^1.7.0",
    "simple-git": "^3.20.0",
    "openrouter-agents": "github:bramato/openrouter-agents",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "boxen": "^7.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/figlet": "^1.5.6",
    "@types/inquirer": "^9.0.7",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "preferGlobal": true
